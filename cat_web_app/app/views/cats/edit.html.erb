<h1>Tell us about this here cat of yours...</h1>

<form action="<%= cat_url(@cat) %>" method="post">
    <input type="hidden" name="_method" value="PATCH">

    <label for="name">Name</label>
    <input id="name" type="text" name="cat[name]" value="<%= @cat.name %>">
    <br>
    
    <label for="sex">Sex</label><br>
    <input id="sex" type="radio" name="cat[sex]" value="M" <%= @cat.sex == 'M' ? "checked=checked" : "" %> >Male<br>
    <input id="sex" type="radio" name="cat[sex]" value="F" <%= @cat.sex == 'F' ? "checked=checked" : "" %> >Female<br>
    <br>

    <label for="color">Color</label>
    <select id="color" name="cat[color]">
        <option disabled selected <%= @cat.color ? "" : "selected"%>  >--Please Select--</option>
        <% @cat.colors.each do |color| %>
            <option value="<%= color %>" <%= @cat.color == color ? "selected" : "" %>><%= color %></option>
        <% end %>
    </select><br>

    <label for="birth_date">Birth Date</label><br>
    <input id="date" type="date" name="cat[birth_date]" value="<%= @cat.birth_date %>"><br>

    <label for="description">Description</label><br>
    <textarea name="cat[description]"><%= @cat.description %></textarea><br>

    <input type="submit" value="Edit that cat!">
</form>